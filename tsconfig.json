{
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["lib/**/*"],
  "exclude": ["test", "node_modules"]
}
